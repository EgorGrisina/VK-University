<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:minHeight="64dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/iv_friend_item_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_friend_item_photo">
        <TextView
            android:id="@+id/iv_friend_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto"
            android:textSize="16sp"
            android:textColor="#2e3033"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/iv_friend_item_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto-Regular"
            android:textSize="14sp"
            android:textColor="#909499"
            android:layout_below="@+id/iv_friend_item_name"
            android:layout_alignStart="@+id/iv_friend_item_name" />
    </RelativeLayout>
</RelativeLayout>